#!/usr/bin/python

# This generates files with between 1 and 10,000 expressions.

if __name__ == "__main__":
    COUNT = 100

    for i in range(COUNT):
        with open(str(i) + ".sml", "w") as f:
            for j in range(i + 1):
                f.write("fun f" + str(j) + " x = x + " + str(j) + "\n")

            f.write("\n\nval _ = ")
            for j in range(i + 1):
                f.write("  f" + str(j) + " " + str(j) + ";\n")
